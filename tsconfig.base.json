{
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@core/*": ["core/src/*"],
      "@cli/*": ["cli/src/*"],
      "@backend/*": ["web/backend/src/*"],
      "@frontend/*": ["web/frontend/src/*"]
    }
  }
}
